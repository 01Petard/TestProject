<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f4f5f9">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/left_icon"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/amiya"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/left_name"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="16sp"
            android:text="对方的名字"
            android:maxLines="1"/>
        <LinearLayout
            android:id="@+id/left_ll"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/left_icon"
            android:layout_below="@id/left_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_chat_32">
            <TextView
                android:id="@+id/left_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="示例文字"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/right_ll_name"
            android:layout_toLeftOf="@id/right_ll_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/right_name"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="16sp"
                android:gravity="end"
                android:text="我的名字"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/right_ll_msg"
            android:layout_below="@id/right_ll_name"
            android:layout_toLeftOf="@id/right_ll_icon"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_chat_32">
            <TextView
                android:id="@+id/right_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:text="示例文字"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/right_ll_icon"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/right_icon"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/doctor"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>